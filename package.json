{
    "name": "dinkum-tracker",
    "version": "0.1.0",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "postinstall": "flowbite-react patch",
        "electron": "electron .",
        "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "ts-node scripts/build-electron.ts",
        "package": "electron-builder build --publish never",
        "package:publish": "electron-builder build --publish always"
    },
    "build": {
        "appId": "com.dinkumtracker.app",
        "productName": "Dinkum Tracker",
        "files": [
            "dist/**/*",
            "electron/next/**/*"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "category": "public.app-category.lifestyle",
            "icon": "public/icon.icns"
        },
        "win": {
            "icon": "public/icon.ico"
        },
        "publish": {
            "provider": "github",
            "owner": "chiefpansancolt",
            "repo": "dinkum-tracker"
        }
    },
    "dependencies": {
        "flowbite-react": "^0.11.7",
        "next": "15.3.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-toastify": "^11.0.5",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "concurrently": "^9.1.2",
        "electron": "^36.1.0",
        "electron-builder": "^26.0.12",
        "electron-updater": "^6.6.2",
        "eslint": "^9",
        "eslint-config-next": "15.3.1",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "react-icons": "^5.5.0",
        "tailwindcss": "^4",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    }
}
